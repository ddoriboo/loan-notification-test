# Environment Variables for AI Message Generator
# Copy this file to .env and fill in your values

# OpenAI API Configuration (optional - for real LLM features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
DEBUG_MODE=True

# Data Configuration
DATA_FILE_PATH=202507_.csv
ANALYSIS_CACHE_ENABLED=True

# Feature Flags
ENABLE_LLM_GENERATION=False
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_TIMING_OPTIMIZATION=True

# Security
SECRET_KEY=your_secret_key_here_for_production

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log